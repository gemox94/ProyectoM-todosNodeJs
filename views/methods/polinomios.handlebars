<div class="row" style="margin-top: 20px;" ng-controller="newtonPolinomioController">

    <div class="col m3">
        <div class="input-field">
            <input id="formule" type="text" ng-model="formule">
            <label for="formule">Formula</label>
        </div>

        <div class="row">
            <div class="col s4 offset-s4">
                <div class="input-field">
                    <input id="a" type="text" ng-model="a">
                    <label for="a">Punto a</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input id="maxIter" type="text" ng-model="maxIter">
                    <label for="maxIter">Max. Iteraciones</label>
                </div>
            </div>
            <div class="col s6">
                <div class="input-field">
                    <input id="tolerancia" type="text" ng-model="tolerancia">
                    <label for="tolerancia">Tolerancia</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s6">
                <a class="waves-effect waves-light btn">Gráficar</a>
            </div>
            <div class="col s6">
                <a class="waves-effect waves-light btn" ng-click="calculate()">Calcular</a>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <a href="#" data-activates="slide-out" class="button-collapse waves-effect waves-light btn" style="width: 100%;">Menú</a>
            </div>
        </div>

        <div class="row">
            <div class="col s12 right-align">
                <a class="btn-floating btn-large waves-effect waves-light teal darken-1" ng-click="clear_results()"><i class="material-icons">delete</i></a>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col m8">
            <table class="striped">
                <thead>
                <tr>
                    <th>Coef1</th>
                    <th>Results1</th>
                    <th>Coef2</th>
                    <th>Results2</th>
                    <th>A</th>
                </tr>
                </thead>

                <tbody>
                <tr ng-repeat="result in results">
                    <td>[[result.coef1]]</td>
                    <td>[[result.res1]]</td>
                    <td>[[result.coef2]]</td>
                    <td>[[result.res2]]</td>
                    <td>[[result.a]]</td>
                </tr>
                </tbody>

            </table>
        </div>

    </div>



</div>
