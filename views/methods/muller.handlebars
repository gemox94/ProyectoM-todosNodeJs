<div class="row" style="margin-top: 20px;" ng-controller="biseccionController">

    <div class="col m3">
        <div class="input-field">
            <input id="formule" type="text" ng-model="formule">
            <label for="formule">Formula</label>
        </div>

        <div class="row">
            <div class="col s4">
                <div class="input-field">
                    <input id="x0" type="text" ng-model="x0">
                    <label for="x0">X0</label>
                </div>
            </div>
            <div class="col s4">
                <div class="input-field">
                    <input id="x1" type="text" ng-model="x1">
                    <label for="x1">X1</label>
                </div>
            </div>
            <div class="col s4">
                <div class="input-field">
                    <input id="x2" type="text" ng-model="x2">
                    <label for="x2">X2</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input id="maxIter" type="text" ng-model="maxIter">
                    <label for="maxIter">Max. Iteraciones</label>
                </div>
            </div>
            <div class="col s6">
                <div class="input-field">
                    <input id="tolerancia" type="text" ng-model="tolerancia">
                    <label for="tolerancia">Tolerancia</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s6">
                <a class="waves-effect waves-light btn">Gráficar</a>
            </div>
            <div class="col s6">
                <a class="waves-effect waves-light btn" ng-click="calculate()">Calcular</a>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <a href="#" data-activates="slide-out" class="button-collapse waves-effect waves-light btn" style="width: 100%;">Menú</a>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col m8">
            <table class="striped">
                <thead>
                <tr>
                    <th>Index</th>
                    <th>X0</th>
                    <th>X1</th>
                    <th>X2</th>
                </tr>
                </thead>

                <tbody>
                <tr ng-repeat="result in results">
                    <td>[[$index+1]]</td>
                    <td>[[result.x0]]</td>
                    <td>[[result.x1]]</td>
                    <td>[[result.x2]]</td>
                </tr>
                </tbody>

            </table>
        </div>

    </div>



</div>

